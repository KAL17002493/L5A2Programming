@model L5A2Programming.Models.AssetViewModel

<h1>Create</h1>

<div class="container">
    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="">
            <div class="mb-3">
                <label for="Asset.AssetName" class="form-label">Description</label>
                <input asp-for="Asset.AssetName" type="text" class="form-control" id="Asset.AssetName" placeholder="Asset Name" name="Asset.AssetName">
                <span asp-validation-for="Asset.AssetName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                 <label for="" class="form-label">Category</label>
                @Html.DropDownListFor(m => m.Asset.CategoryId, Model.Categories, "Select a category", new {@class = "form-select"})
                <span asp-validation-for="Asset.CategoryId" class="text-danger"></span>
            </div>


            <div class="mb-3">
                 <label for="" class="form-label">Institution</label>
                @Html.DropDownListFor(m => m.Asset.InstitutionId, Model.Institution, "Select an Institution", new {@class = "form-select"})
                <span asp-validation-for="Asset.InstitutionId" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Add Asset</button>
            </div>
        </div>
    </form>

</div>

