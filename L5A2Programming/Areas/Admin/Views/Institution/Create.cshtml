@model L5A2Programming.Models.InstitutionModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>InstitutionModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control mb-2" />

                <label asp-for="Postcode" class="control-label"></label>
                <input asp-for="Postcode" class="form-control mb-2" />

                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary m-1" />
                <a asp-action="Index" class="btn btn-secondary m-1">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
