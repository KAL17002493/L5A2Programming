@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Role Manager";
}
<h1>Roles Overview</h1>




<div class="container">
    <div class="row">
        <div class="col">
            <form method="post" asp-action="AddRole" asp-controller="RolesManager">
                <div class="input-group">
                    <input name="roleName" class="form-control" placeholder="Role Name"/>
                    <span class="input-group-btn">
                        <button class="btn btn-primary">Add New Role</button>
                    </span>
                </div>
            </form>
        </div>
