@*Create*@
@model L5A2Programming.Models.RoomViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="">
        
        <form method="post" asp-action="Create">
            @*Displays input box for room late*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label for="Room.Name" class="control-label">Room Lable</label>
                <input asp-for="Room.Name" class="form-control" id="Room.Room" placeholder="Room Lable" name="Room.Name"/>
                <span asp-validation-for="Room.Name" class="text-danger"></span>
            </div>

            @*Displays a dropdown list with all existing insitutitons*@
            <div class="mb-3">
                 <label for="" class="form-label">Institution</label>
                @Html.DropDownListFor(m => m.Room.InstitutionId, Model.Institution, "Select an Institution", new {@class = "form-select"})
                <span asp-validation-for="Room.InstitutionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-primary" type="submit">Add Room</button>
            </div>
        </form>
    </div>
</div>


